{
  "name": "@uplo/monorepo",
  "version": "0.0.0",
  "main": "index.js",
  "author": "Justas Palumickas",
  "license": "MIT",
  "repository": "jpalumickas/uplo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "packages:publish": "pnpm publish -r --filter @uplo/*",
    "version:patch": "lerna version patch --force-publish",
    "version:minor": "lerna version minor --force-publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.2",
    "lerna": "^6.6.2",
    "prettier": "^3.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.1.6"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "arrowParens": "always",
    "trailingComma": "es5"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "pnpm@8.1.1"
}
